    <script>
        function setStickyVideo() {
            const readVideo = document.querySelector('.readVideo');
            const readVideoHolder = document.querySelector('.readVideo__holder');
            const closeButton = document.querySelector('.readVideo__close');

            if (!readVideo || !readVideoHolder) return;

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // In view
                        readVideo.classList.remove('sticky');
                        readVideo.classList.add('inline');
                    } else {
                        // Out of view
                        readVideo.classList.remove('inline');
                        readVideo.classList.add('sticky');
                    }
                });
            }, {
                root: null,
                threshold: 0
            });

            observer.observe(readVideoHolder);

            if (closeButton) {
                closeButton.addEventListener('click', () => {
                    readVideo.classList.remove('sticky');
                    readVideo.classList.add('inline');
                    closeButton.classList.add('hide');
                });
            }
        }

        document.addEventListener('DOMContentLoaded', setStickyVideo);
    </script>


