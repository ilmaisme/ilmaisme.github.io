<!-- s: article -->
<div class="highlight">
    <ul class="highlightList row">
        {{#each trending}}
        {{#gte @index compare=../index_start}}
        {{#gte @index compare=../index_end}}
        {{else}}
        <li class="highlightItem mt20{{#if ../col}} {{../col}}{{/if}}">
            <a href="{{link}}" class="highlightImg__wrap" aria-label="{{title}}">
                <img src="{{img}}{{@index}}.jpg" class="highlightImg" alt="" width="234" height="164" loading="lazy">
            </a>
            <div class="highlightBox">
                {{#if ../sub}}
                <div class="highlightDetail display-flex aitems-center mt10">
                    <div class="highlightSubtitle">{{subtitle}}</div>
                    <div class="highlightTime">Minggu, 18 Mei 2025</div>
                </div>
                {{/if}}
                <h2 class="highlightTitle mt10"><a href="{{link}}" class="highlightLink">{{title}}</a></h2>
                {{#if ../sub}}
                {{else}}
                <div class="highlightTime mt10">Minggu, 18 Mei 2025</div>
                {{/if}}
            </div>
        </li>
        {{/gte}}
        {{else}}
        {{/gte}}
        {{/each}}
    </ul>
</div>
<!-- e: article -->