<header class="header">
    <div class="headerFixed">
        <div class="container display-flex aitems-center">
            <div class="headerSearch">
                <form class="search" action="">
                    <div class="display-flex">
                        <div class="searchWrap">
                            <input class="formInput searchInput" id="search" type="text" value=""
                                placeholder="Search inspiring idea" aria-label="Search">
                            <button class="button buttonSearch" aria-label="Search" type="submit" name="submit">
                                <span class="icon icon-search"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="headerFixed__left display-flex">
                <a href="index.html">
                    <img src="asset/images/kontemporer-logo-transparent.png" class="headerFixed__logo" alt="Kontemporer"
                        width="200" height="38">
                </a>
                <nav class="nav fixedNav">
                    <ul class="navList display-flex jcontent-center">
                        {{#each menu}}
                        <li class="navItem"><a href="{{link}}"
                                class="navLink{{#eq title compare=../page}} active{{/eq}}">{{title}}</a></li>
                        {{/each}}
                    </ul>
                </nav>
            </div>
            <div class="display-flex aitems-center jcontent-end">
                <div class="headerDate -getdate"></div>
                {{#eq login compare=true}}
                <button class="button buttonPrimary" onclick="location.href='profile-write.html'">Tulis Artikel</button>
                <div class="navUser">
                    <img loading="lazy" src="asset/images/sample/user-big.jpg" width="35" height="35" alt=""
                        class="userAvatar userAvatar--nav mr10">
                    <span class="icon icon-arrow icon-arrow-bottom navUser__icon"></span>
                    <label class="sr-only" for="navUser">User navigation</label>
                    <input name="check" type="checkbox" id="navUser" class="navUser__check" aria-haspopup="true">
                    <ul class="navUser__list">
                        <li class="navItem navUser__item"><a href="profile-detail.html"
                                class="navLink navUser__link"><span class="navUser__name">Sophie
                                    Anggita</span></a></li>
                        <li class="navItem navUser__item"><a href="profile-setting.html"
                                class="navLink navUser__link">Edit
                                Profil</a></li>
                        <li class="navItem navUser__item"><a href="profile.html"
                                class="navLink navUser__link">Beranda</a>
                        </li>
                        <li class="navItem navUser__item"><a href="#" class="navLink navUser__link red"><span
                                    class="icon icon-logout"></span>Logout</a></li>
                    </ul>
                </div>
                {{else}}
                <button class="button buttonPrimary" onclick="location.href='login.html'"><span
                        class="icon icon-reg mr10"></span>Sign in</button>
                {{/eq}}
            </div>
        </div>
    </div>
    <div class="headerContent container">
        <div class="headerLogo headerBg text-center">
            <a href="index.html">
                <img src="asset/images/kontemporer-logo-transparent.png" alt="Kontemporer" width="391" height="74">
