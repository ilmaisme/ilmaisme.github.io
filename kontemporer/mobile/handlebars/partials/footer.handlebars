<footer>
    <div class="footer text-center">
        {{#eq top compare=false}}
        {{else}}
        <button class="button buttonTotop" aria-label="Back to top" onclick="backToTop()"><span
                class="icon icon-next"></span></button>
        {{/eq}}
        <a href="index.html">
            <img src="asset/images/kontemporer-logo.png" class="footerLogo" alt="Kontemporer" width="190" height="36"
                loading="lazy">
            <div class="footerTxt mt5">Kontemporer is an independent media platform <br> that amplifies impactful
                stories,
                people,
                and ideas</div>
        </a>
        <ul class="footerList display-flex jcontent-center mt20">
            {{#each footermenu}}
            <li class="footerItem">
                <a href="{{link}}" class="footerLink">{{title}}</a>
            </li>
            {{/each}}
        </ul>
        <ul class="footerList display-flex jcontent-center aitems-center mt20">
            <li class="footerItem footerItem--small footerSocial">
                Find us :
            </li>
            <li class="footerSocial socialIcon"><a href="#" class="socialLink display-flex" target="_blank"
                    rel="noopener noreferrer" aria-label="Facebook"><span class="icon icon-fb"></span></a></li>
            <li class="footerSocial socialIcon"><a href="#" class="socialLink display-flex" target="_blank"
                    rel="noopener noreferrer" aria-label="Instagram"><span class="icon icon-ig"></span></a></li>
