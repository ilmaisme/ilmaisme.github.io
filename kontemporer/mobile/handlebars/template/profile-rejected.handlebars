<!DOCTYPE html>
<html lang="en">
{{> head page="Profile"}}

<body>
    <!-- header -->
    {{> header page="Profile" active="Ditolak" login=true}}
    <!-- header -->
    <!-- main -->
    <main role="main" class="main">
        <section class="profile container">
            <div class="articleCaption mt30">Ditolak</div>
            <ul class="articleList mt20">
                {{#eachIndex headline}}
                <li class="articleItem profileItem display-flex">
                    <a href="{{item.link}}" class="profileItem__link flex-init">
                        <div class="profileArticle__wrap">
                            <h2 class="articleTitle">{{item.title}}</h2>
                            <div class="articleDetail profileDetail display-flex aitems-center mt10">
                                <div class="articleTime mr10">18 Mei 2025</div>
                            </div>
                        </div>
                    </a>
                    <button type="button" class="button profileArticle__action ml10 -bMail"
                        aria-label="Open Notification"><span class="icon icon-mail-cta profileArticle__icon"></span></button>
                </li>
                {{/eachIndex}}
                {{#eachIndex headline}}
                <li class="articleItem profileItem display-flex">
                    <a href="{{item.link}}" class="profileItem__link flex-init">
                        <div class="profileArticle__wrap">
                            <h2 class="articleTitle">{{item.title}}</h2>
                            <div class="articleDetail profileDetail display-flex aitems-center mt10">
                                <div class="articleTime mr10">18 Mei 2025</div>
                            </div>
                        </div>
                    </a>
                    <button type="button" class="button profileArticle__action ml10 -bMail"
                        aria-label="Open Notification"><span class="icon icon-mail-cta profileArticle__icon"></span></button>
                </li>
                {{/eachIndex}}
            </ul>
            {{> paging active=false mt=30}}
        </section>
    </main>
    <!-- s: popup mail -->
    {{> profile/popup-mail}}
    <!-- e: popup mail -->

    <!-- footer -->
    {{> footer}}

    {{> js page="Profile"}}
    <script>
        $(document).ready(function () {
            //toggle popup mail
            $(".-bMail").on("click", function () {
                $('.-pMail').addClass('active');
            });
        })
    </script>

</body>

</html>