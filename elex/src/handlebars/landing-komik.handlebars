<!DOCTYPE html>
<html lang="en">

{{> head page="category" swiper=true}}

<body>
    {{!> header/header login=true}}
    {{> header/header}}
    <main class="main category --komik" role="main">

        <div class="container">
        
            {{>breadcrumb parent="Komik"}}
        
        </div>
        <div class="lead --small art --komik">
            <div class="artBg">
            </div>
            <div class="container leadContent">
                <h1 class="leadCaption"><img src="./asset/images/logo-comic.svg" alt="Comic" width="234" height="81"></h1>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="leftbar col-xl-9">
                    <div class="categoryWrap">
                        <div class="categoryHl__big categorySwiper swiper">
                            <div class="swiper-wrapper">

                                {{>category/headline channel=category.Headline tag="h2" label="Petualangan" index_start=0
                                index_end=5 width="840" height="470"}}

                            </div>
                        </div>
                        <div class="categoryHl__nav categorySwiper swiper">
                            <div class="swiper-wrapper">

                                {{>category/headline channel=category.Headline tag="h3" label="Petualangan" index_start=0
                                index_end=5 width="100" height="100" nav=true}}

                            </div>
                        </div>
                    </div>
                    <h2 class="title">Latest <span class="cl-red">News</span></h2>
                    <div class="artList artRow">

                        {{>article channel=article.Komik index_start=0 index_end=5 lazy=true tag="h3" width="184"
                        height="110"}}

                    </div>
                    <div class="titleWrap mt40">
                        <h2 class="title">Photo</h2>
                        <a href="photo.html" class="titleLink">All Photos</a>
                    </div>

                    {{!>media/photo-widget}}

                    <div class="artList artRow mt40">

                        {{>article channel=article.Quanta index_start=0 index_end=5 lazy=true tag="h3" width="184"
                        height="110"}}

                    </div>
                    <div class="titleWrap mt40">
                        <h2 class="title">Video</h2>
                        <a href="video.html" class="titleLink">All Videos</a>
                    </div>

                    {{>media/video-widget}}

                    <div class="artList artRow mt40">

                        {{>article channel=article.Kids index_start=0 index_end=5 lazy=true tag="h3" width="184"
                        height="110"}}

                    </div>
                    <div class="center-flex mt40">
                        <button class="button buttonPrimary">Load more</button>
                    </div>
                </div>
                <div class="sidebar col-xl-3">
                    <div class="artSlide__bg">
                        <img src="./asset/images/widget/bg-art-komik.png" alt="" width="234" height="166">
                    </div>
                    <div class="catalogWidget" data-widget="5">

                        {{>catalog index_start=0 index_end=5 link=true}}

                    </div>
                    <div class="titleWrap">
                        <h2 class="title">All <span class="cl-red">News</span></h2>
                        <a href="#" class="titleLink">All News</a>
                    </div>
                    <div class="artList artRow">

                        {{>article channel=article.Kids index_start=0 index_end=2 tag="h3" width="184"
                        height="110"}}
                        {{>article channel=article.Komik index_start=2 index_end=5 lazy=true tag="h3" width="184"
                        height="110"}}

                    </div>
                    <div class="titleWrap">
                        <h2 class="title"><span class="cl-red">Events</span></h2>
                        <a href="#" class="titleLink">All Events</a>
                    </div>
                    <div class="eventList row">

                        {{>event channel=article.Event index_start=0 index_end=5 lazy=true tag="h3"}}

                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- s: popup video -->
    {{>media/video-popup}}
    <!-- e: popup video -->

    {{> footer/footer}}

    {{> js page="category" catalog=true swiper=true medias=true}}

</body>

</html>