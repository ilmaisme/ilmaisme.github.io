<!DOCTYPE html>
<html lang="en">

{{> head page="career"}}

<body>
    {{!> header/header login=true}}
    {{> header/header}}
    <main class="main careers" role="main">

        <div class="container">

            {{>breadcrumb parent="Karir"}}

        </div>
        <div class="lead">
            <div class="leadBg artBg">
                <img class="--left" src="./asset/images/logo-symbol.svg" alt="" width="225" height="155">
                <img class="--right" src="./asset/images/logo-symbol.svg" alt="" width="225" height="155">
            </div>
            <div class="container">
                <div class="leadContent col-xl-10 mx-auto">
                    <h1 class="leadCaption">Letâ€™s grow with us</h1>
                    <div class="leadText">Prey men quarterdeck belaying guns rat pinnace fluke main. Roger chain piracy
                        her hogshead avast dock.</div>
                    <form action="#" class="leadSort row">
                        <div class="col-md-4 col-lg-3 leadSort__item">
                            <label for="categ">Category</label>
                            <div class="formSelect selectDrop">
                                <select name="categ" id="categ">
                                    <option value="intern" selected>Internship</option>
                                    <option value="full">Full Time</option>
                                    <option value="full">Contract</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-3 leadSort__item">
                            <label for="sort">Sort by</label>
                            <div class="formSelect selectDrop">
                                <select name="sort" id="sort">
                                    <option value="0" selected>Newest</option>
                                    <option value="1">Oldest</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="careersWrap">
                <div class="careersPostingWrap">
                    <div class="careersPosting">

                        {{>career/card channel=career index_start=0 index_end=10}}

                        {{>paging}}
                    </div>
                </div>
                <div class="careersDetWrap">

                    {{>career/detail channel=career index_start=0 index_end=1}}

                </div>
            </div>
        </div>
    </main>

    <!-- s: popup career -->
    {{>career/popup}}
    <!-- e: popup career -->

    {{> footer/footer}}

    {{> js page="career"}}

</body>

</html>