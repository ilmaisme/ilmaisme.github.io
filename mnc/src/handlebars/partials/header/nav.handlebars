<nav class="nav center-flex" aria-label="primarynavigation">
    <div class="navWrap">
        <div class="menu mobile-only" id="menu">
            <label class="sr-only" for="menuToggle">Open navigation</label>
            <input type="checkbox" class="menuToggle" name="check" id="menuToggle" aria-haspopup="true"
                autocomplete="off">
            <svg class="ham hamRotate" viewBox="0 0 100 100" width="80">
                <path class="line top hamLine"
                    d="m 70,33 h -40 c 0,0 -6,1.368796 -6,8.5 0,7.131204 6,8.5013 6,8.5013 l 20,-0.0013" />
                <path class="line middle hamLine" d="m 70,50 h -40" />
                <path class="line bottom hamLine"
                    d="m 69.575405,67.073826 h -40 c -5.592752,0 -6.873604,-9.348582 1.371031,-9.348582 8.244634,0 19.053564,21.797129 19.053564,12.274756 l 0,-40" />
            </svg>
        </div>
        <!-- s: navigation -->
        <div class="menuMob mobile">
            <div class="headerLogin mobile-only container">
                {{#eq login compare=true}}
                <button class="button headerLogin__user" onclick="openUserMenu(this)">
                    <div class="headerLogin__img">
                        <img src="./asset/images/user-login-default.png" alt="" width="24" height="24">
                    </div>
                    <div class="headerLogin__name">Fadhil Ghazali</div>
                    <span class="icoInline icoChevron"></span>
                </button>
                {{>header/user}}
                {{else}}
                <a href="login.html" class="buttonLogin">
                    <img src="./asset/images/user-default.png" alt="" width="24" height="24">
                    Login
                </a>
                {{/eq}}
            </div>
            <ul class="navList display-flex">
                {{#each mainMenu}}
                <li class="navItem{{#eq ../page compare=title}} active{{/eq}}">
                    {{#if submenu}}
                    <div class="navOpen" id="navOpen" aria-haspopup="true" tabindex="0">
                        {{title}}
                        <span class="icoInline icoChevron"></span>
                        <div class="navSub">
                            {{#each submenu}}
                            <a href="{{link}}" class="navLink" tabindex="-1">{{title}}
                            </a>
                            {{/each}}
                        </div>
                    </div>
                    {{else}}
                    <a href="{{link}}" class="navLink" tabindex="-1">
                        {{title}}
                        {{#if dot}}
                        <span class="navDot"></span>
                        {{/if}}
                    </a>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </div>
        <!-- e: navigation -->
    </div>

    {{>header/searchbox}}
    
</nav>