{{#each book.Best}}
{{#gte @index compare=../index_start}}
{{#gte @index compare=../index_end}}
{{else}}
<div class="productItem productItem--row col-12">
    <div class="productBox row">
        <div class="productWrap col-5 col-md-2">
            <div class="profileWish__check">
                <input type="checkbox" id="wish{{@index}}" name="wish" class="formCheck" {{#eq @index compare=0}}
                    checked="checked" {{/eq}} aria-label="checklist wishlist">
            </div>
            <a href="{{link}}" aria-label="Open detail's Product" class="productImg">
                <img src="{{image}}" alt="{{title}}" width="100" height="150" loading="lazy">
            </a>
        </div>
        <div class="productContent col-5 col-md-4">
            <a href="{{link}}">
                <h3 class="productTitle">{{title}}</h3>
            </a>
            <div class="productAuthor__wrap">
                {{#if authors}}
                {{#each authors}}
                <a href="{{authorlink}}">
                    <div class="productAuthor">{{author}}</div>
                </a>
                {{/each}}
                {{else}}
                <a href="{{authorlink}}">
                    <div class="productAuthor">{{author}}</div>
                </a>
                {{/if}}
            </div>
        </div>
        <div class="profileWish__price col-5 col-md-2">
            <div class="productMisc__title">Price</div>
            <div class="productPrice productMisc">
                {{price}}
            </div>
        </div>
        <div class="profileWish__categ col-6 col-md-2">
            <div class="productMisc__title">Category</div>
            <div class="productPrice productMisc">
                Comic
            </div>
        </div>
        <div class="profileWish__cta col-2">
            <button class="button" aria-label="Remove Wishlist">
                <span class="icoInline icoTrash"></span>
            </button>
        </div>
    </div>
</div>
{{/gte}}
{{else}}
{{/gte}}
{{/each}}