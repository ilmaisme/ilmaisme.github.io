<!DOCTYPE html>
<html lang="en">

{{>head page="profile"}}

<body>
    {{>header/header login=true}}
    {{!>header/header}}

    <main role="main">

        <div class="container">

            {{>breadcrumb title="Profile" subtitle="User Profile" sublink="#"}}

            <div class="profile row">
                <sidebar class="profileNav col-lg-3">

                    {{>profile/nav page="User Profile"}}

                </sidebar>
                <div class="col-lg-9">
                    <h2 class="titleCaption titleCaption--up">User Profile</h2>
                    <div class="profileContent">
                        <form action="#" class="profileSetting row">
                            <div class="col-12 col-lg-6">
                                <h3 class="titleText">Change Password</h3>
                                <div class="profileSetting__wrap">
                                    <label class="formLabel" for="npass">New Password</label>
                                    <div class="formInput__icon">
                                        <button class="button buttonPass -btnpass" aria-label="show hide password"
                                            toggle="#npass" type="button"></button>
                                        <span class="icoInline icoPass"></span>
                                        <input type="password" class="formInput formUpdate" name="npass" id="npass"
                                            placeholder="*******">
                                        <!--<div class="formMsg display-flex">
                                            <span class="icoInline icoReport"></span>
                                            <span>The password consists of 8 characters. Use capital letters and numbers
                                                to make
                                                your password more secure.</span>
                                        </div>-->
                                    </div>
                                </div>
                                <div class="profileSetting__wrap">
                                    <label class="formLabel" for="cpass">Confirm Password</label>
                                    <div class="formInput__icon">
                                        <button class="button buttonPass -btnpass" aria-label="show hide password"
                                            toggle="#cpass" type="button"></button>
                                        <span class="icoInline icoPass"></span>
                                        <input type="password" class="formInput formUpdate" name="cpass" id="cpass"
                                            placeholder="*******">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 profileCta__wrap row">
                                <button class="profileCta button buttonPrimary mt3 -updatepro" type="button">
                                    Save
                                </button>
                                <button class="profileCta button buttonSecondary buttonSecondary--trans mt3 -cancelpro"
                                    type="button">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </main>

    {{>footer/footer}}

    {{>js page="profile"}}
    <script>
        $(document).ready(function () {
            //show hide password
            $(".-btnpass").click(function () {
                let input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                    $(this).addClass("show")
                } else {
                    $(this).removeClass("show")
                    input.attr("type", "password");
                }
            });
            $(".-updatepro").click(function () {
                $(".formUpdate[disabled]").prop('disabled', false)
                $(this).html("Save")
                $(".-cancelpro").show()
                $(".profileSetting__link").show()
            })
            $(".-cancelpro").click(function () {
                cancelUpdate()
            })

            function cancelUpdate() {
                $(".formUpdate").prop('disabled', true);
                $(".-cancelpro").hide()
                $(".-updatepro").html("Update")
                $(".profileSetting__link").hide()
            }
        });
    </script>

</body>

</html>