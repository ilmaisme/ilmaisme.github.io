<!DOCTYPE html>
<html lang="en">

{{>head page="profile"}}

<body>
    {{>header/header login=true}}
    {{!>header/header}}

    <main role="main">

        <div class="container">

            {{>breadcrumb title="Profile" subtitle="My Review" sublink="#"}}

            <div class="profile row">
                <sidebar class="profileNav col-lg-3">

                    {{>profile/nav page="My Review"}}

                </sidebar>
                <div class="col-lg-9">
                    <h2 class="titleCaption titleCaption--up">My Review</h2>
                    <div class="profileContent">
                        <div class="profileReview">

                            {{>profile/product-review total=10 index_start=0 index_end=10}}

                        </div>

                        <ul class="paging center-flex">
                            {{>paging}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </main>

    {{>footer/footer}}

    {{>js page="profile"}}
    <script>
        $(document).ready(function () {
            if (viewport().width >= 768) {
                // console.log("desktop")        
                $('.productItem').each(function () {
                    $(this).find('.-link').appendTo($(this).find('.-titlerev'));
                })
            } else {
                // console.log("mobile")
                $('.productItem').each(function () {
                    $(this).find('.-link').appendTo($(this).find('.-titlerevm'));
                })
            }
        })
    </script>

</body>

</html>