<div class="highlight highlight--box mt40">
    <div class="display-flex aitems-center jcontent-between">
        <div class="highlightCaption__box">Hits Movie : Squid Game</div>
        <a href="#" class="highlightMore highlightMore__box display-flex aitems-center">Lihat Lainnya <span class="icon icon-next ml10"></span></a>
    </div>
    <ul class="highlightList row">
        {{#eachIndex headline}}
        {{#gt index compare = '1'}}
        <li class="highlightItem col-gd12-4">
            <a href="{{item.link}}" class="highlightImg__wrap" aria-label="{{item.title}}">
                <img src="{{item.img}}{{index}}.jpg" class="highlightImg" alt="" width="300" height="250"
                    loading="lazy">
            </a>
            <div class="highlightBox">
                <div class="highlightDetail display-flex aitems-center mt10">
                    <div class="highlightSubtitle">{{item.subtitle}}</div>
                    <div class="highlightTime">9 menit yang lalu</div>
                </div>
                <h2 class="highlightTitle mt10"><a href="{{item.link}}" class="highlightLink">{{item.title}}</a></h2>
            </div>
        </li>
        {{/gt}}
        {{/eachIndex}}
    </ul>
</div>