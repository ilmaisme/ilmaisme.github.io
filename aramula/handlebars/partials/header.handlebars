<header class="header">
    <div class="headerFixed display-flex aitems-center">
        <ul class="social display-flex flex-init">
            <li class="socialIcon"><a href="#" class="socialLink display-flex" target="_blank" rel="noopener noreferrer"
                    aria-label="Facebook"><span class="icon icon-fb"></span></a></li>
            <li class="socialIcon"><a href="#" class="socialLink display-flex" target="_blank" rel="noopener noreferrer"
                    aria-label="Instagram"><span class="icon icon-ig"></span></a></li>
            <li class="socialIcon"><a href="#" class="socialLink display-flex" target="_blank" rel="noopener noreferrer"
                    aria-label="Twitter"><span class="icon icon-tw"></span></a></li>
            <li class="socialIcon"><a href="#" class="socialLink display-flex" target="_blank" rel="noopener noreferrer"
                    aria-label="Youtube"><span class="icon icon-yt"></span></a></li>
        </ul>
        <a href="index.html">
            <img src="asset/images/logo-aramula-small.png" class="headerFixed__logo" alt="Aramula" width="315" height="52" loading="lazy">
        </a>
        <div class="display-flex flex-init jcontent-end">
            {{#eq login compare=true}}
            <button class="button buttonPrimary" onclick="location.href='profile-write.html'"><span class="icon icon-write mr10"></span>Tulis Artikel</button>
            <div class="navUser">
                <img loading="lazy" src="asset/images/sample/user-big.jpg" width="35" height="35" alt=""
                    class="userAvatar userAvatar--nav mr10">
                <span class="icon icon-arrow icon-arrow-bottom navUser__icon"></span>
                <label class="sr-only" for="navUser">User navigation</label>
                <input name="check" type="checkbox" id="navUser" class="navUser__check" aria-haspopup="true">
                <ul class="navUser__list">
                    <li class="navItem navUser__item"><a href="profile-detail.html" class="navLink navUser__link"><span
                                class="navUser__name">Sophie
                                Anggita</span></a></li>
                    <li class="navItem navUser__item"><a href="profile-setting.html" class="navLink navUser__link">Edit Profil</a></li>
                    <li class="navItem navUser__item"><a href="profile.html" class="navLink navUser__link">Beranda</a></li>
                    <li class="navItem navUser__item"><a href="#" class="navLink navUser__link red">Logout</a></li>
                </ul>
            </div>
            <a href="search.html" class="buttonSearch" aria-label="Search"><span class="icon icon-search"></span></a>
            {{else}}
            <button class="button buttonSecondary" onclick="location.href='login.html'">Masuk</button>
            <button class="button buttonPrimary" onclick="location.href='register.html'"><span class="icon icon-reg mr10"></span>Daftar Aramula.com</button>
            <a href="search.html" class="buttonSearch" aria-label="Search"><span class="icon icon-search"></span></a>
            {{/eq}}
        </div>
    </div>
    <div class="headerContent container">
        <div class="headerLogo text-center">
            <a href="index.html">
                <img src="asset/images/logo-aramula.png" alt="Aramula" width="457" height="75">
            </a>
        </div>
        <nav class="nav mt40">
            <ul class="navList display-flex jcontent-center">
                {{#each menu}}
                <li class="navItem"><a href="{{link}}"
                        class="navLink{{#eq title compare=../page}} active{{/eq}}">{{title}}</a></li>
                {{/each}}
                <li class="navItem navMore">
                    <div class="navLink">
                        <span class="icon icon-arrow icon-arrow-bottom"></span>
                        <label class="sr-only" for="navToggle">More navigation</label>
                        <input name="check" type="checkbox" id="navToggle" class="navCheck" aria-haspopup="true">
                        <ul class="navMore__list">
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 1</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 2</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 3</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 4</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 5</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 6</a></li>
                            <li class="navItem navMore__item"><a href="#" class="navLink navMore__link">Kategori 7</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </div>
</header>