<!DOCTYPE html>
<html lang="en">

{{> head page="detail" slick=true}}

<body>
    {{> header/header}}
    <main role="main" class="main detail">
        <div class="container">
            <div class="breadcrumb">
                {{>breadcrumb title="Fashion"}}
            </div>

            <div class="detailWrap row">
                <div class="col-left row col-12 col-xl-9">
                    <div class="col-offset-m col-xl-5">
                        {{>detail/image total=1 index_start=1 index_end=2}}

                    </div>
                    <div class="detailContent col-offset-m col-xl-7">
                        {{>detail/content total=1 index_start=1 index_end=2}}

                        <div class="detailSummary spacing-sm mobile-only">
                            {{>detail/cta}}
                        </div>

                        <!-- s: details tab -->
                        {{>detail/tab total=1 index_start=1 index_end=2}}
                        <!-- e: details tab -->

                        <div class="title spacing-sm">
                            Kupon Toko
                        </div>

                        <div class="detailCoupon col-12 col-xl-10 -jsShowPar">
                            <div class="detailCouponWrap -jsShowTg">
                                {{>component/coupon}}
                                {{>component/coupon}}
                                {{>component/coupon}}
                                {{>component/coupon}}
                            </div>
                            <button class="button detailCouponMore -jsShowToggle"
                                onclick="showMore(this, 'Tampilkan Lebih Sedikit', 'Tampilkan Selengkapnya')">
                                Tampilkan Selengkapnya
                            </button>
                        </div>
                    </div>
                    <div class="col-offset-m spacing-xl col-12">
                        {{>detail/nav active="Diskusi"}}
                    </div>
                    <div class="detailNav col-12 col-offset-m" id="diskusi">
                        <div class="title spacing-sm">
                            Diskusi (4)
                        </div>

                        {{>detail/discussion}}
                    </div>
                </div>
                <div class="col-right col-12 col-xl-3">
                    {{>detail/summary}}
                </div>
            </div>

            <div class="titleWrap spacing-xl">
                <h2 class="title">
                    <span>Produk Serupa</span>
                </h2>
                <a href="product.html" class="titleLink">Lihat Lainnya</a>
            </div>
            {{>template/product-list total=6 index_start=0 index_end=6 col="col-6 col-md-3 col-xl-2" lazy=true}}
        </div>
        <!-- cart cta mobile -->
        <div id="cartMob" class="summaryMob">
            {{>detail/cart-cta}}
        </div>
        <!-- cart cta mobile -->
    </main>
    <!-- popup -->
    {{>share image="https://smexpo.pertamina.com/smexpo-api/seller/products/2021100319571070659.jpg" title="Jual kimmy
    Backpack Tas Punggung Anak sekolah / Tas Ransel
    Sekolah" link="https://smexpo.pertamina.com/produk/52"}}

    {{>detail/photo-popup-review}}

    {{>detail/report-popup}}
    <!-- popup -->
    {{>help}}
    {{>footer}}

    {{>js page="detail" zoom=true popup=true slick=true more=true cart=true cta=true}}

</body>

</html>