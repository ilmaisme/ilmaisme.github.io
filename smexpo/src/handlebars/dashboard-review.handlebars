<!DOCTYPE html>
<html lang="en">

{{> head page="dashboard" sort=true select=true}}

<body>
    {{> header/header login=true}}
    <main role="main" class="main dashboard">
        <div class="container">
            <div class="breadcrumb">
                {{>breadcrumb title="Dashboard" link="dashboard.html" subtitle="Kotak Masuk" subchildtitle="Ulasan"}}
            </div>
            <div class="row dashboardRow">
                <div class="col-xl-3 dashboardNav desktop-only">
                    {{>dashboard/nav page="Ulasan"}}
                    <button class="button dashboardLogout spacing-sm">
                        <span class="icon iconLogout"></span>
                        Keluar
                    </button>
                </div>
                <div class="col-xl-9 dashboardContent">
                    <h2 class="title">
                        <span>Ulasan</span>
                    </h2>
                    <form action="#" class="addressForm">
                        <div class="dashboardHead spacing-sm">
                            <div class="sortFilter">
                                <span class="sortFilterTitle">Filter</span>
                                {{>dashboard/sort type="review"}}
                            </div>
                            <div class="search">
                                <button class="button icon iconSearch" aria-label="search review"></button>
                                <input type="text" value="" class="searchInput" aria-label="search review"
                                    placeholder="Cari Ulasan" inputmode="search">
                            </div>
                        </div>
                        <div class="dashboardReview reviewList">
                            <div class="dashboardBox">
                                {{>dashboard/review-item}}
                            </div>
                            <div class="dashboardBox">
                                {{>dashboard/review-item}}
                            </div>
                            <div class="dashboardBox">
                                {{>dashboard/review-item}}
                            </div>
                        </div>
                        <ul class="paging">
                            {{>paging}}
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </main>

    {{>help}}
    {{>footer}}

    {{>js page="dashboard" sort=true select=true}}

</body>

</html>