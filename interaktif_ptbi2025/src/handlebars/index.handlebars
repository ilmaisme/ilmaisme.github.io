            <div class="bgStatic">
                <div class="aspectPop">
                    {{#each aspect}}
                    <div class="aspectPopup popup aspectPopup{{@index}}">
                        <div class="aspectPop__wrap">
                            <div class="aspectPop__content">
                                <div class="aspectPop__title text-center">{{{title}}}</div>
                                <ul class="aspectPop__txt">
                                    {{{list}}}
                                </ul>
                            </div>
                            <div class="aspectPop__anim aspectAnim animationDiagram{{@index}}"
                                id="animationDiagram{{@index}}"></div>
                            <button class="button aspectPop__close" aria-label="Close popup">
                                tutup
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="policyPop">
                    {{#each policy}}
                    <div class="policyPopup popup policyPopup{{add @index 1}}">
                        <div class="policyPop__wrap">
                            <img class="policyNum" src="./asset/images/policy-{{add @index 1}}.png" alt="" loading="lazy">
                            <div class="policyPop__content">
                                <div class="policyPop__title">
                                    {{title}}
                                </div>
                                <div class="policyPop__txt">
                                    {{{desc}}}
                                </div>
                            </div>
                            <button class="button policyPop__close" aria-label="Close popup">
                                <img src="./asset/images/close.png" alt="">
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <!-- Template Image Content -->
        <!-- Fullpage Content -->
        <div id="fullpage" class="fullpage">
            <section class="section cover">
                <div class="container">
                    <div class="coverWrap center-flex dir-column text-center heightFull">
                        <div class="coverContent">
                            <h1 class="coverTxtWrap center-flex dir-column">
                                <picture class="coverTxt coverTxt--1">
                                    <img srcset="./asset/images/cover-txt-1.png" alt="Tangguh & Mandiri" class="">
                                </picture>
                                <picture class="coverTxt coverTxt--2">
                                    <img srcset="./asset/images/cover-txt-2.png" alt="Sinergi Mendorong Pertumbuhan Ekonomi
Lebih Tinggi dan Berdaya Tahan" class="">
                                </picture>
                            </h1>
                        </div>
                        <div class="coverAnim animationCover" id="animationCover"></div>
                    </div>
                </div>
            </section>
            <section class="section">
            </section>
            <section class="section">
