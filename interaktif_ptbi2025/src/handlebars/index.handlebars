            <section class="section mapSection text-center">
                <div class="container">
                    <div class="mapWrap center-flex dir-column text-center heightFull">
                        <h2 class="artCaption">Fondasi Indonesia</h2>
                        <h3 class="artTitle">Ekonomi Indonesia Tetap Stabil</h3>
                        <div class="mapAnim animationMap" id="animationMap"></div>

                        <div class="buttonClick mapClick opac0" aria-label="Trigger Content">
                            <span><img src="./asset/images/cursor.svg" alt="" loading="lazy" width="30"
                                    height="37"></span>
                            <div class="buttonClick__txt">klik pada map</div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container baseContainer heightFull">
                    <div class="base1Wrap baseWrap dir-column text-center heightFull">
                        <div class="artTitle">Pertumbuhan ekonomi <br> Indonesia <span class="cl-yellow">stabil >5%*
                            </span>
                        </div>
                        <div class="cl-white">(*kecuali pada masa pandemi 2020-2021)</div>
                        <div class="base1Anim baseAnim animationBase1" id="animationBase1"></div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container baseContainer heightFull">
                    <div class="base2Wrap baseWrap dir-column text-center heightFull">
                        <div class="artTitle">Inflasi <span class="cl-yellow">terkendali <3% </span>
                        </div>
                        <div class="base2Anim baseAnim animationBase2" id="animationBase2"></div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container baseContainer heightFull">
                    <div class="base3Wrap baseWrap dir-column text-center heightFull">
                        <div class="artTitle">Nilai tukar <span class="cl-yellow">terjaga <Rp15.900* </span>
                        </div>
                        <div class="cl-white">(2019-2024)</div>
                        <div class="base3Anim baseAnim animationBase3" id="animationBase3"></div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container baseContainer heightFull">
                    <div class="base4Wrap baseWrap dir-column text-center heightFull">
                        <div class="artTitle">Perbankan<span class="cl-yellow"> kuat (CAR >20%)</span>
                        </div>
                        <div class="base4Anim baseAnim animationBase4" id="animationBase4"></div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container baseContainer heightFull">
                    <div class="base5Wrap baseWrap dir-column text-center heightFull">
                        <div class="artTitle">Kredit<span class="cl-yellow"> tumbuh >10%</span>
                        </div>
                        <div class="base5Anim baseAnim animationBase5" id="animationBase5"></div>
                    </div>
                </div>
            </section>
            <section class="section aspectSection text-center">
                <div class="container heightFull">
                    <div class="aspectWrap dir-column text-center heightFull">
                        <h2 class="artCaption">Aspek penting di 2026</h2>
                        <h3 class="artTitle">Prasayarat untuk Tangguh & Mandiri dengan <br> Pertumbuhan Lebih Tinggi dan
                            Berdaya Tahan</h3>
                        <div class="aspectAnim animationAspect opac0" id="animationAspect">

                            <div class="buttonClick aspectClick" aria-label="Trigger Content">
                                <span><img src="./asset/images/cursor.svg" alt="" loading="lazy" width="30"
                                        height="37"></span>
                                <div class="buttonClick__txt">klik pada icon</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section policySection">
                <div class="container heightFull">
                    <div class="policyWrap dir-column text-center heightFull">
                        <h2 class="artCaption">Bauran Kebijakan BI</h2>
                        <div class="policyAnim opac0">
                            <div class="policyPath">
                                {{>policy}}
                            </div>
                            <div class="buttonClick policyClick" aria-label="Trigger Content">
                                <span><img src="./asset/images/cursor.svg" alt="" loading="lazy" width="30"
                                        height="37"></span>
                                <div class="buttonClick__txt">klik pada pilar</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container heightFull">
                    <div class="synergyWrap dir-column text-center heightFull">
                        <h2 class="artCaption artTitle cl-black">SINERGI PEMERINTAHâ€“BI</h2>
                        <h3 class="artCaption artTitle cl-black">Transformasi Ekonomi Nasional</h3>
                        <div class="synergyAnim opac0">
                            <img src="./asset/images/synergy.png" alt="" loading="lazy">
                            <ul>
                                <li class="synergyItem">Stabilitas makroekonomi <br> dan sistem keuangan</li>
                                <li class="synergyItem"> Penciptaan <br> lapangan kerja</li>
                                <li class="synergyItem">Menjaga <br> pertumbuhan ekonomi</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section">
                <div class="container heightFull">
                    <div class="directWrap dir-column text-center heightFull">
                        <h2 class="artCaption cl-black">ARAH 2026</h2>
                        <h3 class="artTitle cl-black">Menjaga Stabilitas, Mempercepat Pertumbuhan</h3>
                        <div class="directAnim opac0">
                            <img srcset="./asset/images/direct-anim.png" alt="" loading="lazy" class="">
