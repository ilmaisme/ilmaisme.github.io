<div class="sidebarArt__list">
    {{#eachIndex article}}
    <div class="sidebarArt__item mt2">
        <a href="{{item.link}}" class="sidebarArt__link display-flex">
            <div class="sidebarArt__img">
                {{#eq index compare=0}}
                <img src="https://dummyimage.com/90x90/092947/fff&amp;amp;text=90x90" class="artImg" alt="" width="90"
                    height="90" loading="lazy">
                {{else}}
                <img src="{{item.image}}" class="artImg" alt="" width="90" height="90" loading="lazy">
                {{/eq}}
            </div>
            <div class="sidebarArt__content">
                <div class="artDate">09 - 09 - 2022</div>
                <h3 class="titleArt">{{item.title}}</h3>
            </div>
        </a>
    </div>
    {{/eachIndex}}
</div>