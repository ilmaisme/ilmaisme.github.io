        <!-- Template Image Content -->
        <div class="bgStatic__wrap active">
            <div class="bgStatic">
                <div class="cover heightFull center-flex opac0">
                    <div class="coverContent container text-center">
                        <div class="coverLogo">
                            <picture class="">
                                <source srcset="./asset/images/logo-bni-mob.png" media="(max-width: 768px)"
                                    alt="BNI Logo" width="100" height="29">
