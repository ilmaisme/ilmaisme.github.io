<!DOCTYPE html>
<html lang="en">

{{>head page="Tekno" channel=site.Tekno}}

<body class="theme--tekno">

    <!-- s: pushdown billboard -->
    {{>ads/pushdown}}
    <!-- e: pushdown billboard -->

    <div class="root">
        <!-- s: flashnews -->
        {{>flashnews channel=flashnews}}
        <!-- e: flashnews -->

        {{!>header/header login=true kanal="Tekno" nav=true width=127 height=40}}
        {{>header/header kanal="Tekno" nav=true active="Gadget" width=127 height=40}}

        <!-- s: skyscrapper billboard -->
        {{>ads/skyscrapper}}
        <!-- e: skyscrapper billboard -->

        <main role="main" class="main">

            <!-- s: menu panel -->
            {{>header/menu}}
            <!-- e: menu panel -->

            <div class="container mt50">

                <div class="row mt50">
                    <div class="col-7 col-left">

                        <!-- s: latest -->
                        <h3 class="titleCaption">Berita Terbaru</h3>
                        {{>tekno/latest subkanal=true channel=kanal.Tekno.latest pos="three" type="col" total=8 index_start=0
                        index_end=1}}

                        <!-- e: latest -->

                        <!-- s: leaderboard billboard -->
                        <div class="mt50">
                            {{>ads/leaderboard}}
                        </div>
                        <!-- e: leaderboard billboard -->

                        {{>tekno/latest subkanal=true channel=kanal.Tekno.latest mt="50" type="row" total=8 index_start=1
                        index_end=6}}

                        <!-- s: leaderboard billboard -->
                        <div class="mt50">
                            {{>ads/leaderboard}}
                        </div>
                        <!-- e: leaderboard billboard -->

                        {{>tekno/latest subkanal=true channel=kanal.Tekno.latest mt="50" type="row" total=8 index_start=3
                        index_end=8}}

                        <div class="center-flex">
                            <a href="#" class="buttonPrimary mt50">Index</a>
                        </div>

                    </div>
                    <sidebar class="sidebar col-3 col-right">
                        <!-- s: rectangle billboard -->
                        {{>ads/middle}}
                        <!-- e: rectangle billboard -->

                        <!-- s: terpopuler -->
                        <h3 class="titleCaption mt50">Terpopuler</h3>
                        {{>kanal/most dates=true channel=kanal.Tekno.most total=5 index_start=0 index_end=5}}

                        <!-- e: terpopuler -->

                        <!-- s: topic -->
                        <h3 class="titleCaption mt50">Topik-Topik Pilihan</h3>
                        {{>topic channel=topic total=9 index_start=3 index_end=9}}

                        <!-- e: topic -->

                        <!-- s: rectangle billboard -->
                        <div class="mt50">
                            {{>ads/middle}}
                        </div>
                        <!-- e: rectangle billboard -->

                        <h3 class="titleCaption mt50">Subscribe Newsletter Bisnis Indonesia</h3>
                        {{>newsletter pos="sidebar"}}

                        <!-- s: bisnistv -->
                        <div class="kanalBisnistv mt50">
                            <h3 class="titleCaption">
                                <img src="./asset/images/logo/bisnistv-logo.png" alt="Bisnistv logo" loading="lazy"
                                    width="119" height="31">
                            </h3>
                            {{>tekno/article channel=kanal.Tekno.Video.latest video=true btv=true type="col" total=1
                            index_start=0 index_end=1}}

                        </div>

                        <!-- e: bisnistv -->
                    </sidebar>
                </div>
            </div>
        </main>
    </div>

    <!-- s: bottom billboard -->
    {{>ads/bottom}}
    <!-- e: bottom billboard -->

    {{>footer/footer}}

    {{>footer/script page="tekno"}}

</body>

</html>