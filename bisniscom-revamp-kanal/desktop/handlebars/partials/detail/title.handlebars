{{#eq pos compare="left"}}
<div class="detailsTitle{{#if pos}} -{{pos}}{{/if}}{{#if mt}} mt{{mt}}{{/if}}">
    {{#each channel}}
    {{#gte @index compare=../index_start}}
    {{#gte @index compare=../index_end}}
    {{else}}
    <h1 class="detailsTitleCaption">{{title}}</h1>
    {{#if ../lead}}
    <div class="detailsLead">{{lead}}</div>
    {{/if}}
    <div class="detailsAttribute">
        {{#if ../photo}}
        <div class="detailsAttributeAuthor">
            <div class="profileImg{{#if ../default}} profileImgDefault{{/if}}">
                <img src="{{authorphoto}}" alt="{{author}}" loading="lazy" width="36" height="36">
            </div>
            <span class="detailsAttributeItem">
                <div class="authorName"><strong>{{author}}</strong> - Bisnis.com</div>
                <div class="detailsAttributeDates">
                    {{dates}}
                </div>
            </span>
        </div>
        {{else}}
        <span class="detailsAttributeItem detailsAttributeAuthor">
            <span class="icoInline icoProfile"></span>
            <div class="authorName">{{author}}</div>
        </span>
        <span class="detailsAttributeItem">
            <span class="icoInline icoCal"></span>
            {{dates}}
        </span>
        <span class="detailsAttributeItem">
            <span class="icoInline icoEye"></span>
            5 menit baca
        </span>
        {{/if}}
    </div>
    {{/gte}}
    {{else}}
    {{/gte}}
    {{/each}}
    {{#if share}}
    {{> detail/share caption="Share"}}
    {{/if}}
</div>
{{else}}
<div class="detailsTitle{{#if premium}}{{else}} text-center{{/if}}">
    {{#each channel}}
    {{#gte @index compare=../index_start}}
    {{#gte @index compare=../index_end}}
    {{else}}
    {{#if ../premium}}
    <div class="premiumBoxBtn"><span class="icoInline icoPremium"></span>Konten Premium</div>
    {{else}}
    <div class="artChannel">{{channel}}</div>
    {{/if}}
    <h1 class="detailsTitleCaption">{{title}}</h1>
    <div class="detailsAttribute{{#if ../premium}}{{else}} center-flex{{/if}}">
        <span class="detailsAttributeAuthor">
            <div class="profileImg{{#if ../default}} profileImgDefault{{/if}}">
                <img src="{{authorphoto}}" alt="{{author}}" loading="lazy" width="26" height="26">
            </div>
            <div class="authorName">{{author}}</div>
        </span>
        <span>{{dates}}</span>
        <span>5 menit baca</span>
    </div>
    {{/gte}}
    {{else}}
    {{/gte}}
    {{/each}}
</div>
{{/eq}}