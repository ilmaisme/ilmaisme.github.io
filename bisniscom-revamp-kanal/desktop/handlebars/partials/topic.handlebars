<div class="topic">
    <ul class="topicList">
        {{#each channel}}
        {{#gte @index compare=../index_start}}
        {{#gte @index compare=../index_end}}
        {{else}}
        <li class="topicItem">
            <a href="{{link}}" class="topicLink">
                {{#if ../heading}}
                <{{../heading}} class="topicTitle">{{title}}</{{../heading}}>
                {{else}}
                <h4 class="topicTitle">{{title}}</h4>
                {{/if}}
            </a>
        </li>
        {{/gte}}
        {{else}}
        {{/gte}}
        {{/each}}
    </ul>
</div>