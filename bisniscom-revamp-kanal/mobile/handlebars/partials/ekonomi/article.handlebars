<div class="art{{#if mt}} mt{{mt}}{{/if}}">
    <div
        class="artWrap{{#if type}} -{{type}}{{/if}}{{#if pos}}-{{pos}}{{/if}}{{#if small}} -small{{/if}}{{#if center}} -center{{/if}}{{#if grid}} {{grid}}{{/if}}">
        {{#each channel}}
        {{#gte @index compare=../index_start}}
        {{#gte @index compare=../index_end}}
        {{else}}
        <div class="artItem{{#if ../column}} {{../column}}{{/if}}">
            <a href="{{link}}" class="artLink artLinkImg">
                <div class="artImg">
                    {{#eq ../pos compare="top"}}
                    {{#eq @index compare=0}}
                    <img src="https://images.bisnis.com/thumb/posts/{{img}}?w={{../widthtop}}&h={{../heighttop}}"
                        width="{{../widthtop}}" height="{{../heighttop}}" alt="{{title}}" {{#if
                        ../lcp}}{{else}}loading="lazy" {{/if}}>
                    {{else}}
                    <img src="https://images.bisnis.com/thumb/posts/{{img}}?w={{../width}}&h={{../height}}"
                        width="{{../width}}" height="{{../height}}" alt="{{title}}" {{#if ../lcp}}{{else}}loading="lazy"
                        {{/if}}>
                    {{/eq}}
                    {{else}}
                    <img src="https://images.bisnis.com/thumb/posts/{{img}}?w={{../width}}&h={{../height}}"
                        width="{{../width}}" height="{{../height}}" alt="{{title}}" {{#if ../lcp}}{{else}}loading="lazy"
                        {{/if}}>
                    {{/eq}}
                    {{#if ../video}}
                    <div class="artDuration">
                        <span class="icoInline icoPlay"></span>
                        {{#if ../btv}}{{else}}04.22{{/if}}
                    </div>
                    {{/if}}
                </div>
            </a>
            <div class="artContent">
                {{#compare ../dates "==" false}}
                {{else}}
                <div class="artContentWrap">
                    {{#compare ../pos "==" "center"}}
                    {{else}}
                    {{#if premium}}
                    <div class="artChannel -premium">
                        <a href="subkanal-ekonomi.html">
                            <span class="icoInline icoPremium"></span>Premium
                        </a>
                    </div>
                    {{else}}
                    <div class="artChannel">
                        <a href="subkanal-ekonomi.html">
                            {{channel}}
                        </a>
                    </div>
                    {{/if}}
                    {{/compare}}
                    <div class="artDate">
                        9 menit yang lalu
                    </div>
                </div>
                {{/compare}}
                <a href="{{link}}" class="artLink">
                    {{#if live}}
                    <div class="artLive"><span>Live</span></div>
                    {{/if}}
                    <h4 class="artTitle">
                        {{title}}
                    </h4>
                </a>
            </div>
        </div>
        {{/gte}}
        {{else}}
        {{/gte}}
        {{/each}}
    </div>
</div>