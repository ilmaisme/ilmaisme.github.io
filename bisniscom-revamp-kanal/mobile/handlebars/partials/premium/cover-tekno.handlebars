<div class="detailsCover{{#if mt}} mt{{mt}}{{/if}}">
    {{#each channel}}
    {{#gte @index compare=../index_start}}
    {{#gte @index compare=../index_end}}
    {{else}}
    <div class="detailsCoverImg artImg">
        <img src="https://images.bisnis.com/thumb/posts/{{img}}?w=1440&h=840" alt="{{title}}" width="1440" height="840">
    </div>
    <div class="detailsTitle center-flex">
        <div class="premiumBoxBtn"><span class="icoInline icoPremium"></span>Konten Premium</div>
        <h1 class="detailsTitleCaption">{{title}}</h1>
        <div class="detailsLead">{{lead}}</div>
        <div class="detailsAttribute">
            <span class="detailsAttributeItem detailsAttributeAuthor">
                <span class="icoInline icoProfile"></span>
                <div class="authorName">{{author}}</div>
            </span>
            <span class="detailsAttributeItem">
                <span class="icoInline icoCal"></span>
                {{dates}}
            </span>
            <span class="detailsAttributeItem">
                <span class="icoInline icoEye"></span>
                5 menit baca
            </span>
        </div>
    </div>
    {{/gte}}
    {{else}}
    {{/gte}}
    {{/each}}
</div>