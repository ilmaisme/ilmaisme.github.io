<!DOCTYPE html>
<html lang="en">

{{>head page="Ekonomi" latest=true channel=site.Ekonomi font=true}}

<body class="theme--ekonomi">

    <!-- s: pushdown billboard -->
    {{>ads/pushdown}}
    <!-- e: pushdown billboard -->

    <div class="root">
        <!-- s: flashnews -->
        {{>flashnews channel=flashnews}}
        <!-- e: flashnews -->

        {{>header/header kanal="Ekonomi" font=true nav=true active="Infrastruktur"}}

        <main role="main" class="main">

            <!-- s: menu panel -->
            {{!>header/menu login=true}}
            {{>header/menu}}
            <!-- e: menu panel -->

            <div class="container mt20">

                <!-- s: latest -->
                <h3 class="titleCaption mt10">Berita Terbaru</h3>
                {{>ekonomi/article channel=kanal.Ekonomi.latest pos="top" type="row" widthtop="384" heighttop="216"
                width="127" height="72" total=5 index_start=0
                index_end=5 lcp=true}}

                <!-- e: latest -->

                <!-- s: rectangle billboard -->
                <div class="mt30">
                    {{>ads/middle}}
                </div>
                <!-- e: rectangle billboard -->

                {{>ekonomi/article channel=kanal.Ekonomi.latest mt="30" pos="top" type="row" widthtop="384" heighttop="216"
                width="127" height="72" total=5 index_start=0
                index_end=5}}

                <!-- s: rectangle billboard -->
                <div class="mt30">
                    {{>ads/middle}}
                </div>
                <!-- e: rectangle billboard -->

                {{>ekonomi/article channel=kanal.Ekonomi.latest mt="30" pos="top" type="row" widthtop="384" heighttop="216"
                width="127" height="72" total=5 index_start=0
                index_end=5}}

                <div class="center-flex">
                    <a href="#" class="buttonPrimary mt30">Indeks</a>
                </div>

                <!-- s: rectangle billboard -->
                <div class="mt30">
                    {{>ads/middle}}
                </div>
                <!-- e: rectangle billboard -->  

                <!-- s: terpopuler -->
                <h3 class="titleCaption mt30">Terpopuler</h3>
                {{>kanal/most channel=kanal.Lifestyle.most total=4 index_start=0 index_end=4}}

                <!-- e: terpopuler -->              

                <!-- s: rec -->
                <h3 class="titleCaption mt30">Rekomendasi Kami</h3>
                {{>ekonomi/article channel=kanal.Ekonomi.recommend.latest grid="row" column="col-5" mt="16" width="145" height="109"
                total=4 index_start=0 index_end=4 dates=false}}

                <!-- e: rec -->
            </div>
        </main>
    </div>

    <!-- s: bottom billboard -->
    {{>ads/bottom}}
    <!-- e: bottom billboard -->

    {{>footer/footer}}

    {{>footer/script page="ekonomi"}}

</body>

</html>