                            </a>
                        </div>
                        {{/eachIndex}}
                    </div>
                </div>
                <div class="videoCaption__wrap display-flex jcontent-between aitems-center">
                    <div class="videoCaption display-flex aitems-center">
                        <div class="mr10">
                            <img src="asset/images/icon-video.png" alt="" loading="lazy" width="30" height="30">
                        </div>
                        8 Video
                    </div>
                    <button class="button buttonWhite videoBtn -jsSmallVid">Tutup</button>
                </div>
                <div class="videoCol videoSmall active">
                    <div class="js-vid-slider-nav">
                        {{#eachIndex headline}}
                        <div class="videoSmall__item">
                            <a href="read-video.html" class="display-flex aitems-center">
                                <div class="videoSmall__wrap">
                                    <img src="{{item.img}}{{index}}.webp" class="videoImg videoSmall__img" alt=""
                                        width="87" height="87" loading="lazy">
                                    <span class="icon icon-play videoIcon"></span>
                                </div>
