<!DOCTYPE html>
<html lang="en">
{{> head page=""}}

<body>
    <!-- header -->
    {{> header page="Video" login=false}}
    <!-- header -->
    <!-- main -->
    <main role="main" class="main">
        <section class="container">
            {{> ads/top mt=0}}
            <div class="videoRow col-offset-fluid mt30">
                <div class="videoBig">
                    <div class="js-vid-slider-for">
                        {{#eachIndex headline}}
                        <div class="videoBig__item">
                            <a href="read-video.html" aria-label="{{item.title}}">
                                <img src="{{item.img}}{{index}}.webp" class="videoImg videoBig__img" alt="" width="360"
                                    height="239" loading="lazy">
                                <span class="icon icon-play"></span>
                            </a>
                        </div>
                        {{/eachIndex}}
                        {{#eachIndex headline}}
                        <div class="videoBig__item">
                            <a href="read-video.html" aria-label="{{item.title}}">
