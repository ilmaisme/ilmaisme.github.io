                            <a href="read-video.html" class="display-flex aitems-center">
                                <div class="videoSmall__wrap">
                                    <img src="{{item.img}}{{index}}.webp" class="videoImg videoSmall__img" alt=""
                                        width="87" height="87" loading="lazy">
                                    <span class="icon icon-play videoIcon"></span>
                                </div>
                                <div class="articleBox">
                                    <div class="articleSubtitle">Video</div>
                                    <h1 class="videoSmall__title mt5">{{item.title}}</h1>
                                    <div class="articleDetail user display-flex aitems-center mt5">
                                        <div class="userName">
                                            Salma Farida
                                        </div>
                                        <div class="articleTime">9 menit yang lalu</div>
