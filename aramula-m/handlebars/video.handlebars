                        </div>
                    </li>
                    {{/eachIndex}}
                </ul>
            </div>
            <button class="button buttonMore mt30">Index</button>
        </section>
    </main>
    {{> ads/sticky}}

    <!-- footer -->
    {{> footer}}

    {{> js slick=true}}
    <script>
        // video slider
        $(document).ready(function () {
            // slick carousel
            $('.js-vid-slider-for').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: 0,
                fade: !0,
                asNavFor: '.js-vid-slider-nav'
            });
            $('.js-vid-slider-nav').slick({
                dots: 0,
                arrows: 0,
                vertical: !0,
                slidesToShow: 4,
                slidesToScroll: 1,
                verticalSwiping: !0,
                infinite: !0,
                speed: 1000,
                autoplay: !0,
                asNavFor: '.js-vid-slider-for',
            });
        });

        //trigger video small
        $('.-jsSmallVid').click(function () {
            $('.videoCol').toggleClass("active");
        });

    </script>
</body>

</html>