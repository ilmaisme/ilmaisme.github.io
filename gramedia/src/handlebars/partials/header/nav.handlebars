<nav class="nav">
    <div class="navList flex-center">
        {{#each mainMenu}}
        <div class="navItem">
            <a href="{{link}}" class="navLink">{{title}}</a>
            {{#if submenu}}
            <ul class="navSub headerDropdown">
                {{#each submenu}}
                <li class="navSubItem">
                    <a href="{{link}}" class="navLink">{{title}}</a>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        {{/each}}
    </div>
</nav>