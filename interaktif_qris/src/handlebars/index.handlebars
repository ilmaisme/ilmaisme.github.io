        <!-- Template Image Content -->
        <div class="bgStatic__wrap active">
            <div class="bgStatic">
                <div class="intro center-flex heightFull">
                    <div class="introTitle articleTitle">Selamat datang di Toko Satu Qris Untuk Semua</div>
